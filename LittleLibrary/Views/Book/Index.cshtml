@model IndexVM[]

<h1>Little Library Book List</h1>
<div>
    <ul>
        @foreach(var item in Model)
        {
            <li>Title: @item.Title<br /> Author: @item.Author</li>
            <br />
            <div class="card" style="width: 18rem;">
                <img class="card-img-top" src="..." alt="Card image cap">
                <div class="card-body">
                    <h4 class="card-title">Title: @item.Title</h4>
                    <h6 class="card-title">Author: @item.Author</h6>
    @*                <h5 class="card-title">Genre: @item.Genre</h5>
    *@                <a href="#" class="btn btn-primary">Details</a>
                </div>
            </div>
        }
    </ul>
</div>
