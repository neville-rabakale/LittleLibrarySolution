@model IndexVM[]

<h1>Little Library Book List</h1>
<div class="pt-4">
    <div class="row row-cols-1 row-cols-md-2 g-4 pt-2">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card" style="width: 18rem;">
                    @if(item.Image != null)
                    {
                        <img class="card-img-top" src="@item.Image" alt="Card image cap">
                    }
                    else
                    {
                       <img class="card-img-top" src="..." alt="Card image cap">
                    }
                    <div class="card-body">
                        <h4 class="card-title">Title: @item.Title</h4>
                        <h6 class="card-title">Author: @item.Author</h6>
                        <h6 class="card-title">Genre: @item.Genre</h6>
                        @if(item.Available == true)
                        {
                            <h6 class="card-title text-success">Available</h6>
                        }
                        else
                        {
                            <h6 class="card-title text-danger">Unavailable</h6>
                        }
                        <a href="#" class="btn btn-primary">Details</a>
                    </div>
                </div>
            </div>
        }
    </div>

</div>
